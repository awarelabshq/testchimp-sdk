{
  "manifest_version": 3,
  "name": "TestChimp - Create API Automation Tests Easily From Manual Test Sessions",
  "version": "0.25",
  "description": "Capture UI + API activity during testing sessions. Easily convert them to automation tests with no code.",
  "permissions": [
    "activeTab",
    "storage",
    "contextMenus",
    "scripting",
    "webRequest"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "testchimp-sdk-ext.js"
      ],
      "run_at": "document_start"
    }
  ],
  "icons": {
    "16": "images/icon-16.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "action": {
    "default_icon": "images/icon-16.png",
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "host_permissions": [
    "*://*/*"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "injectScript.js",
        "menu-config.json"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "content_security_policy": {
    "script-src": "'self'",
    "object-src": "'self'"
  }
}
