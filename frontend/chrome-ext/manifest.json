{
  "manifest_version": 3,
  "name": "TestChimp Chrome Extension",
  "version": "0.1",
  "description": "Enables Screen and API capture which can then be used to build automation tests from the recordings in TestChimp Platform",
  "permissions": ["cookies","activeTab", "scripting","storage",  "webRequest"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["testchimp-sdk-ext.js"],
      "run_at": "document_start"
    }
  ],
  "options_page": "options.html",
  "host_permissions": ["*://*/*"],
  "web_accessible_resources": [
    {
      "resources": ["injectScript.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
  "script-src": "'self'",
  "object-src": "'self'"
}
  }
